{
    "compilerOptions": {
        "module": "amd",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "removeComments": true,
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "outFile": "./dist/ss_log.js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
